<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    >

    <FrameLayout
        android:id="@+id/ivCredential"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/mylib_gray"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <FrameLayout
        android:id="@+id/ivName"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/mylib_gray"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCredential"
        app:layout_constraintTop_toTopOf="@id/ivCredential"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mylib_gray"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCredential"
        app:layout_constraintTop_toBottomOf="@id/ivName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>